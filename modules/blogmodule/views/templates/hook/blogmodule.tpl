<!-- Block blogmodule -->
<div id="blogmodule_block_left" class="block">
  <h4>{l s='Blog' mod='blogmodule'}</h4>
  <div class="block_content">
      <form class="" action="" method="post">
          <div class="form-group">
              <label for="title">Titre</label>
              <input type="text" class="form-control" id="formTitle" placeholder="Votre titre">
          </div>
          <div class="form-group">
              <label for="content">Message :</label>
              <textarea name="name" class="form-control" id="formContent"  placeholder="Votre message" oninput="" rows="8" cols="80"></textarea>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
      </form>
  </div>

</div>
<!-- /Block blogmodule -->
